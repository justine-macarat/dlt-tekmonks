.grid-container-extension {
    height: 100%;
    text-align: center;
}

.grid-item-extension {
    background-color: rgba(255, 255, 255, 1);
}

.input {
    width: 60%;
    border: none;
    border: 1px solid grey;
    border-radius: 10px;
    padding: 10px 12px;
    font-family: Raleway;
    background-color: #ffffff;
    color: #444;
}
.input:focus {outline: none;}
.submitbutton {
    border: 0;
    background: #0f4b9c;
    color: white;
    font-family: Raleway;
    font-size: 16px; 
    color: #ffffff; 
    font-weight: 500; 
    text-align: center; 
    font-style: normal;
    margin: auto;
    border-radius: 10px;
    padding: 15px 30px;
}

.class-submit {
    padding-top: 20px;
    text-align: center
}

textarea {
    width: 60%;
}

